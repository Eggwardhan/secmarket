page{
    background-color: #fff;
    font-size: 14px;
}
.container{
  padding-top:20rpx;
}
.sec-outer{
    height: 100%;
    padding-bottom: 96rpx;
    box-sizing: border-box;
    position: relative;
    overflow-y: auto;
    overflow-x: hidden;
}
.sec-detail {
    height: 100%;
    position: relative;
    overflow-x: hidden;
}
.swiper_box {
    width: 100%;
    height: 320px;
}
.swiper_box .slide-image{
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}
.shopping_container{
    padding: 30rpx 30rpx;
}
.shopping_container .title{
    margin: 20rpx 0;
    font-weight: bold;
    color: #333;
}

.reason{
    margin: 20rpx 0;
    color: #939393;
    line-height: 22px;
}
.place{
      margin: 20rpx 0;
    font-weight: bold;
    color: #333;
}

.list-detail{
    padding: 20rpx;
    box-sizing: border-box;
    overflow: hidden;
    background: white;
}
.list-sec{
    border-bottom: 1px solid #e5e5e5;
    padding-bottom: 20rpx;
}
.top-title{
    font-size: 42rpx;
    padding: 8rpx 0;
}
.description{
    font-size: 28rpx;
    padding: 2rpx 0;
    color: #888888;
}
.pirce-wrapper{
    padding: 8rpx 0;
}
.now{
    font-size: 56rpx;
    color: #e94f4e;
    margin-right: 20rpx;
}
.origin{
    position: relative;
    font-size: 30rpx;
    color: #888888;
}
.origin:before{
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 1px;
    background: #888888;
}
.left-time{
    font-size:24rpx;
    padding:10rpx 16rpx;
    background: #f55939;
    color: white;
}
.detail-sec-wrapper{
    padding-top: 16rpx;
}
.detail-sec{
    font-size: 28rpx;
    padding: 14rpx 0;
}

.list-choice{
    padding: 24rpx 0;
}
.list-choice .color{
    padding-bottom: 1rpx;
}
.list-choice .title{

    font-size: 28rpx;
    color: #888888;
    padding-right: 20rpx;
}
.choice-detail{
    font-size: 28rpx;
}
.bottom-check{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.7);
}
.buy-now{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}
.rush{
    color: white;
    background-color: #2fa7e0;
    border-radius: 0;
}
.inline-block{
    display: inline-block;
}

.item-detail{
    margin: 0 -20rpx;
}
.detail-title{
    height: 100rpx;
    line-height: 100rpx;
    color: #2fa7e0;
    border-top: 20rpx solid #f2f2f2;
    border-bottom: 1px solid #f2f2f2;
    text-align: center;
    font-size: 28rpx;
}
.detail-goods{
    font-size: 0;
    box-sizing: border-box;
}
.disabled{
    pointer-events: none;
    background: gray;
}
.detail-img{
    width: 100%;
}
.confirm2{
    position: absolute;
    width: 50%;
    left: 50%;
    bottom: 0;
    color: white;
    background-color: #2fa7e0;
    border-radius: 0;
}
.confirm1{
   position: absolute;
    width: 50%;
    left: 0;
    bottom: 0;
    color: white;
    background-color: #fbfd6dea;
    border-radius: 0;
}